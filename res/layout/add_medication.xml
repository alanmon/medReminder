<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/add_med_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medication Name:" />


    <EditText
        android:id="@+id/edit_add_med_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Medication Name" />

    


    <TextView
        android:id="@+id/add_med_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="18dp"
        android:text="Type" />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/medtypea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/medtypeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/medtypec"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />
</LinearLayout>
<TextView
        android:id="@+id/add_med_dose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="18dp"
        android:text="Dose" />
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/meddosea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/meddoseb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/meddosec"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />
    <ImageButton
        android:id="@+id/meddosed"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />
    <ImageButton
        android:id="@+id/meddosee"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />
</LinearLayout>
	<TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How often per day do you want to take it" />
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/medfrequencea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/medfrequenceb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/medfrequencec"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />
    <ImageButton
        android:id="@+id/medfrequenced"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AT WHAT TIME?" />
    <LinearLayout 
        	android:id="@+id/addmedbox"
    	android:layout_width="match_parent"
   		android:layout_height="wrap_content"
    	android:orientation="horizontal" >
     <Spinner
        android:id="@+id/whatTimeSpinner1"
        android:layout_width="75dip"
        android:layout_height="wrap_content" 
                android:visibility="gone"
        
        />
      <Spinner
        android:id="@+id/whatTimeSpinner2"
        android:layout_width="75dip"
        android:layout_height="wrap_content" 
                android:visibility="gone"
        
        />
     
      <Spinner
        android:id="@+id/whatTimeSpinner3"
        android:layout_width="75dip"
        android:layout_height="wrap_content" 
                android:visibility="gone"
        
       
        />
      <Spinner
        android:id="@+id/whatTimeSpinner4"
        android:layout_width="75dip"
        android:layout_height="wrap_content" 
                android:visibility="gone"
               
        
        />
     
     
     
    
    

</LinearLayout>
   
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHAT DAYS DO YOU TAKE IT ON?" />
	  <Spinner
        android:id="@+id/whatDaySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
  

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANY WARNINGS OR INSTRUCTIONS?" />
	<ImageButton
        android:id="@+id/medintroa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/medintrob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/medintroc"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />
  	 <ImageButton
        android:id="@+id/medintroadd"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

  

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHAT DOES IT LOOK LIKE?" />
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image_addmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/button_takephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Photo" />

        <ImageButton
            android:id="@+id/button_chooseexisting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Existing" />

    </LinearLayout>
        <Button
        android:id="@+id/addmeddonebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
        android:text="ADD MEDICATION" />

       
    
</LinearLayout>
</ScrollView>